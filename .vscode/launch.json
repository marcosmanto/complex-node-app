{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Debug current file",
      "program": "${workspaceFolder}/${file}",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },

    {
      "name": "Launch via npm",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "watch"]
    }

  ]
}